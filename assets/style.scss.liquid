$small: 480px;
$medium: 768px;
$large: 769px;

/*============================================================================
  #Basics / affitional resets to Shopifys Timber
==============================================================================*/


html {
  font-size: 100%;
  text-size-adjust: 100%; // prevent iOS text size adjust after orientation change, without disabling user zoom.
}

body {
  overflow-y: scroll!important; // Force a vertical scrollbar to prevent a jumpy page
  overflow-x: hidden; // hide horizontal scroll when wrapping acts weird in IE and FF
}

// to prevent blurryness on ajax cart
.ajaxcart__product, .cart__row {
  -webkit-transform: scale(1);
  -moz-transform: scale(1);
  -ms-transform: scale(1);
  -o-transform: scale(1);
  transform: scale(1);
}

// remove the admin bar, #remove when live
#admin_bar_iframe {
  display: none;
}



/*============================================================================
  #Layout
==============================================================================*/

body {
  * {
    text-transform: uppercase;
    text-decoration: none;
  }
}

/*============================================================================
  #Header 
==============================================================================*/

.template-index {
  header[role="banner"] { 
    position: absolute;
    * {
      color: #fff!important;
    }
  }
}

header[role="banner"] {
  background: transparent;
  z-index: 1;
  width: 100%;
  //position: absolute;
  //left: 0;
  //top: 0;

  /* logo */
  .header-logo {
    font-size: 1em;
  }

  /* cart */ 
  #CartToggle {

    float: right;
    margin-left: 10px;

    /* icon with fallback text */
    .icon-fallback-text {
      float: left;
      font-size: 1em;
      margin-right: 0.5em;
    }

    /* the item count */
    #CartCount {
      float: left;
      font-weight: bold;
    }

    /* under medium */
    /* cart gose to top right on smaler devices for making space for navigation */

    @media (max-width: $medium) {
      position: absolute;
      top: 12px;
      right: 10px;
    }

  }

  /* costumer accounts */

  // text links
  #account-area-text-links {

    margin-top: 1px; // align with cart icon
    
    & + nav[role="navigation"] ul > li:last-child a { // enabeling costumer accounts in the header will push down the main nav, removing padding is needed for vertical alignment
        padding-right: 0px;
    }

  }

  // icon
  #account-area-icon {

    .fa-user {
      float: right;
      margin-top: 3px;
      font-size: 1.1em;
      margin-right: 10px;
      margin-left: 10px;
    }

    @media (max-width: $medium) {
      position: absolute;
      margin-top: 0;
      top: 13px;
      left: 6px;
    }

  }

  // main navigation
  nav[role="navigation"] {

    ul {
      margin-bottom: 0;
      //margin-right: 20px;
      
      .site-nav > li:first-child a, 
      .site-nav > li:last-child a, 
      .site-nav__link {
        padding: 0 10px;
        @media (max-width: $medium) { 
          padding: 0 10px;
        }
      }
      
      .site-nav--active a {
        //font-weight: 400;
      }
    }
    * {
      font-size: 1em;
      font-weight: 600;
    }
  }
}

/*============================================================================
  #Footer 
==============================================================================*/

footer[role="contentinfo"] {
  
  .full-row-wrapper {
    background: {{ settings.newsletter_signup_bg }};
  }

  // newsletter
  #newsletter-signup {
    padding: 50px 0 56px 0;
    
    h6 { // the label
      color: {{ settings.newsletter-signup-label }};
      margin-bottom: 15px;
    }

    form {
      max-width: 380px;
      margin: auto;
      input[type="email"] {
        background: {{ settings.newsletter_signup_bg }};
        color: #fff;
        border: 2px solid #fff!important; 
      }
      input[type="submit"] {
        background: #fff;
        color: {{ settings.newsletter_signup_bg }};
      }
    }
  }


  // social buttons
  .social-icons {
    margin: 10px 0 8px 0;
    
    @media (max-width: $medium) {
      margin: 15px 0 0 0;
    }

    li {
      
      &:first-child {
        margin-left: 0;
      }

      //float: left;
      margin: 0px 7px;

      * {
        font-size: 1.2em;
        color: {{ settings.color_primary }};
      }
    }
  }

  // contact details 
  #contact-details {
    margin: 12px 0 8px 0;

    @media (max-width: $medium) {
      margin: 0 0 15px 0;
    }

    p {
      font-weight: bold;
      //float: right;
      margin-bottom: 0;
    }
  }

  // accepted payment methods
  #accepted-payment-methods {
    background: #f2f2f2;
    padding-top: 20px;
    p {
      font-weight: bold;
    }
    ul {
      margin: 8px 0 10px 0;
      li {
        
        &:first-child {
          margin-left: 0;
        }

        margin: 0px 7px;

        * {
          font-size: 1.2em;
          color: {{ settings.color_primary }};
        }
      }
    }
  }
}

