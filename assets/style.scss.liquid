==============================================================================*/

main[role="main"] {
  overflow: auto;
}

/*============================================================================
  #Frontpage 
==============================================================================*/

figure {

  margin: 0;
  padding: 0;
  position: relative;
  text-align: center;
  cursor: pointer;
  z-index: 0;
  float: left;

  img {
    position: relative;
    display: block;
    width: 100%;
  }

  &.big-cover {
    width: 100%;
  }

  &.medium-cover {
    width: 50%;
  }

  &.small-cover {
    width: 25%;
    
    @media (max-width: $medium) {  
      width: 50%;
    }

  }

  * {
    color: #fff;
  }

  img.big-cover-desktop {
    display: block;
    @media (max-width: $medium) {  
      display: none;
    }
  }

  img.big-cover-mobile {
    display: none;
    @media (max-width: $medium) {  
      display: block;
    }
  }

  figcaption {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;  

    div {
      position: absolute;
      top: 42.5%;
      left: 0;
      text-align: center;
      width: 100%;

      h1, h2, h3, h4, h5, h6 {
        font-size: 2em;
        letter-spacing: 0.06em;

        @media (max-width: $medium) { 
          font-size: 1.1em;
          padding: 0 15px 10px 15px;
        }

      }

      a {
        border: 1px solid #fff;
        border-radius: 3px;
        padding: 10px 20px;
        background: rgba(255, 255, 255, 0.2);
        -webkit-transition: all 200ms ease;
        -moz-transition: all 200ms ease;
        -ms-transition: all 200ms ease;
        -o-transition: all 200ms ease;
        transition: all 200ms ease;
        &:hover {
          background: rgba(255, 255, 255, 0.4);
          color: #fff;
          -webkit-transition: all 200ms ease;
          -moz-transition: all 200ms ease;
          -ms-transition: all 200ms ease;
          -o-transition: all 200ms ease;
          transition: all 200ms ease;
        }
      }
    }
  }
}

