/*============================================================================
  #Main 
==============================================================================*/


.main-content {
  margin-top: 0;
  padding-bottom: 0;
}

figure {
  margin: 0;
  padding: 0;
  position: relative;
  float: left;
  overflow: hidden;
  width: 100%;
  background: #3085a3;
  text-align: center;
  cursor: pointer;
  z-index: 0;
  * {
    color: #fff;
  }
  img {
    position: relative;
    display: block;
    width: 100%;
  }
  figcaption::before {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  figcaption {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;  
  }
  h1 {
    position: absolute;
    top: 42.5%;
    left: 0;
    text-align: center;
    width: 100%;
  }
}

.cover {
  background-size: cover!important;
  height: 750px;
  overflow: hidden;
  img {
    position:relative;
    border:none;
    outline:none;
    display:block;
    width: 100%;
    height: auto;
    min-height: auto;
    margin:0;
    padding:0;
  }
  .image-block {
    float: left;
    display: block;
    overflow: hidden;
    width: 100%;
    video {
      width: 102%!important;
    }
  }
  width: 100%;
  z-index: -1;
  display: table;
  .cover-inner {
    position: absolute; 
    z-index: 99; 
    bottom: 0; 
    left: 0; 
    right: 0; 
    /*position: absolute;
    display: table-cell;
    vertical-align: middle;*/
  }
  * {
    color: #fff;
  }
  a {
    border: 1px solid #fff;
    border-radius: 3px;
    padding: 10px 20px;
    text-decoration: none;
    letter-spacing: 0.06em;
    -webkit-transition: all 200ms ease;
    -moz-transition: all 200ms ease;
    -ms-transition: all 200ms ease;
    -o-transition: all 200ms ease;
    transition: all 200ms ease;
  }
  a:hover {
    -webkit-transition: all 200ms ease;
    -moz-transition: all 200ms ease;
    -ms-transition: all 200ms ease;
    -o-transition: all 200ms ease;
    transition: all 200ms ease;
    background: rgba(255, 255, 255, 0.2);
  }
}

